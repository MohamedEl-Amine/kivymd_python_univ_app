
<SurfaceScreen>:
    name: 'surface'
    Widget:
        size: root.size
        canvas.before:
            Rectangle:
                size: self.size
                source: 'images/background.jpg'
        MDBoxLayout:
            size: root.size
            orientation:'vertical'
            MDLabel:
                text: " Technology "

                halign: 'center'
                font_size: 85
                font_name: 'fonts/AltonaSans-Regular.ttf'
                color: 0,0,0,1

            Image:
                source: "images/ggg.jpg"
                size_hint : 1,None
                height: 300


            MDLabel:
                text: "Genie Industriel"
                font_name: 'fonts/Redemtion.ttf'
                font_size: 50
                text_size: None,100
                halign: 'center'
                size_hint : 1,.3
                color: 0,0,0,1

            MDLabel:
                text: "Do you want to Try this application please just press the button below"
                text_size: self.width-50,50
                font_size: 26
                font_name: "fonts/AltonaSans-Italic.ttf"
                halign: 'center'
                size_hint : 1,1
                color: 0,0,0,1
            Button:
                text: "Let's Try"
                font_size: 20
                font_name: 'fonts/AltonaSans-Italic'
                color: 0,0,0,1
                on_release:
                    app.root.current = "Interactive"
                    root.manager.transition.direction = 'left'
                size_hint: 1,None
                height: 100
                pos_hint: {"center_x": .5}
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'


            MDBoxLayout:
                orientation: 'horizontal'
                MDBoxLayout:

                    size_hint: .5,.5
                    orientation: 'vertical'
                    MDLabel:
                        text: "Release In 2022 By MohamedAmine"
                        font_size: 18
                        pos_hint: {"center": 1}
                        color: 0,0,0,1
                        halign: 'left'
                        text_size: self.width,30

                MDBoxLayout:
                    size_hint: .5,.5
                    orientation: 'vertical'
                    padding: ("20dp","20dp","20dp","20dp")
                    Button:
                        text: ''
                        size_hint: None, None
                        width: "50dp"
                        height: "50dp"
                        pos_hint: {"right": 1}
                        background_normal: 'images/info.png'
                        background_down: 'images/infodown.png'
                        on_release:
                            app.root.current = "info"
                            root.manager.transition.direction = 'left'
