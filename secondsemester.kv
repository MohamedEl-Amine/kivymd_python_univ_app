<SecondSemester>:
    name: 'SecondSemester'
    Widget:
        size: root.size
        canvas.before:
            Rectangle:
                size: self.size
                #source: 'images/firstsemster.jpg'

    MDBoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        row_default_height: '48dp'
        row_force_default: True
        #spacing: 10, 10
        ScrollView:
            size: self.size
            BoxInSecondSemester:
                MDRectangleFlatButton:
                    text: "Return"
                    on_release:
                        app.root.current = "Interactive"
                        root.manager.transition.direction = 'right'


